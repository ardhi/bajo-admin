{% extends 'bajoAdmin:/layout/default' %}

{% block body %}
{% set baseRoute = 'bajoAdmin:/coll/:coll' %}
{% set baseId = 'coll' %}
{% cmp 'crudNavbar', view=view, baseRoute=baseRoute, baseId=baseId %}{% endcmp %}
{% if view === 'table' %}
  {% cmp 'crudTable', records=data, schema=schema, id=baseId, route=baseRoute %}
  {% endcmp %}
{% else %}
  {% cmp 'row', class='masonry' %}
    {% for d in data %}
      {% if view === 'gridSmall' %}
        {% cmp 'col', columns=['small:4', 'large:3'], margin='bottom4' %}
          {% cmp 'crudCard', record=d, schema=schema %}{% endcmp %}
        {% endcmp %}
      {% else %}
        {% cmp 'col', columns=['small:6', 'large:4'], margin='bottom4' %}
          {% cmp 'crudCard', record=d, schema=schema %}{% endcmp %}
        {% endcmp %}
      {% endif %}
    {% endfor %}
  {% endcmp %}
{% endif %}

{% cmp 'pagination', options=params, display='flex', justifyContent='center', margin='top5' %}{% endcmp %}

{% endblock %}

{% block css %}{% endblock %}
{% block script %}{% endblock %}